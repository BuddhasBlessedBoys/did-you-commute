{
  "manifest_version": 2,
  "name": "Did you commute?",
  "version": "0.1.0",
  "description": "Strava browser extension to simplify tagging an activity as commute.",
  "homepage_url": "https://github.com/DurchziehnDigga/did-you-commute",
  "permissions": [
    "storage",
    "identity",
    "https://www.strava.com/oauth/authorize",
    "https://www.strava.com/oauth/accept_application"
  ],
  "short_name": "dyc",
  "developer": {
    "name": "Moritz Schmitz von Hülst",
    "url": "https://github.com/boxcee"
  },
  "author": "Moritz Schmitz von Hülst",
  "browser_action": {
    "browser_style": true,
    "default_title": "Did you commute?",
    "default_popup": "popup/index.html"
  },
  "applications": {
    "gecko": {
      "id": "info@temptek.de"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup/index.js"
      ]
    }
  ]
}
